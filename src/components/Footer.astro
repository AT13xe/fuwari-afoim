---

import { profileConfig } from "../config";
import { url } from "../utils/url-utils";
const currentYear = new Date().getFullYear();
---

  
<!--<div class="border-t border-[var(&#45;&#45;primary)] mx-16 border-dashed py-8 max-w-[var(&#45;&#45;page-width)] flex flex-col items-center justify-center px-6">-->
<div class="transition border-t border-black/10 dark:border-white/15 my-10 border-dashed mx-32"></div>
<!--<div class="transition bg-[oklch(92%_0.01_var(&#45;&#45;hue))] dark:bg-black rounded-2xl py-8 mt-4 mb-8 flex flex-col items-center justify-center px-6">-->
<div class="transition border-dashed border-[oklch(85%_0.01_var(--hue))] dark:border-white/15 rounded-2xl mb-12 flex flex-col items-center justify-center px-6">
    <div class="transition text-50 text-sm text-center">
        <!-- Project Badges -->
        <div class="flex flex-wrap justify-center gap-2 mb-3">
            <img class="rounded" src="https://img.shields.io/badge/Built_with-Astro-white?logo=astro&logoColor=FF5D01" alt="Built with Astro" />
            <img class="rounded" src="https://img.shields.io/badge/Components-Svelte-FF3E00?logo=svelte&logoColor=white" alt="Components with Svelte" />
            <img class="rounded" src="https://img.shields.io/badge/Styling-Tailwind_CSS-06B6D4?logo=tailwindcss&logoColor=white" alt="Styling with Tailwind CSS" />
            <img class="rounded" src="https://img.shields.io/badge/Transitions-Swup-4285F4?logo=javascript&logoColor=white" alt="Page Transitions with Swup" />
            <img class="rounded" src="https://img.shields.io/badge/Deployed_on-Cloudflare Page-F38020?logo=cloudflare&logoColor=white" alt="Deployed on Cloudflare" />
            <img class="rounded" src="https://img.shields.io/badge/Media on-Cloudflare_R2-F38020?logo=cloudflare&logoColor=white" alt="Storage: Cloudflare R2" />
            <img class="rounded" src="https://img.shields.io/badge/Analytics-Umami-black?logo=umami&logoColor=white" alt="Analytics by Umami" />
            <img class="rounded" src="https://img.shields.io/badge/RSS-Feed-FF6600?logo=rss&logoColor=white" alt="RSS Feed" />
        </div>
        &copy; <span id="copyright-year">{currentYear}</span> {profileConfig.name}. All Rights Reserved. /
        <a class="transition link text-[var(--primary)] font-medium" target="_blank" href={url('rss.xml')}>RSS</a> /
        <a class="transition link text-[var(--primary)] font-medium" target="_blank" href={url('sitemap-index.xml')}>Sitemap</a><br>
        Powered by
        <a class="transition link text-[var(--primary)] font-medium" target="_blank" href="https://astro.build">Astro</a> &
        <a class="transition link text-[var(--primary)] font-medium" target="_blank" href="https://github.com/saicaca/fuwari">Fuwari</a>
        <br>
        Was this helpful? 
        <a class="transition link text-[var(--primary)] font-medium" target="_blank" href=https://donate.afo.im>Donate now!</a> 
    </div>
</div>